<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="410dp"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/userImg_feedpost"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/photo_button_feedpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/userImg_feedpost"
        app:layout_constraintEnd_toEndOf="@+id/userImg_feedpost"
        app:layout_constraintStart_toStartOf="@+id/userImg_feedpost"
        app:layout_constraintTop_toTopOf="@+id/userImg_feedpost"
        android:backgroundTint="@color/white"
        android:text="사진 불러오기"
        android:fontFamily="@font/theletssmilem"
        android:textColor="@color/black"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/date_feedpost"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276dp"
        android:layout_marginStart="40dp"
        android:text="01-06-2022"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName_feedpost"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="viewEnd"
        android:text="사용자"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/content_feedpost"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="80dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:hint="터치해서 수정"
        android:fontFamily="@font/theletssmilem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sent_FeedPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="보내기"
        android:fontFamily="@font/theletssmilem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_feedpost" />


</androidx.constraintlayout.widget.ConstraintLayout>